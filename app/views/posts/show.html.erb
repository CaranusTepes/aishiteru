<div class="topNavHeader">
  <a href=/posts><i class="bi bi-layer-backward"></i></a>
</div>

<div class="show-container">
  <div class="headers">
    <div class="header-title"> <%= @post.title %> </div>
    <div class="header-author"> Sender: <%= @post.author.blank? ? 'Anonymous' : @post.author %> </div>
    <div class="header-created"> <%= @post.created_at %> </div>
  </div>
  <div class="body">
    <div class="body-body"> <%= @post.body %> </div>
    <div class="body-buttons">
      <div class="edit-icon"><%= link_to '<i class="bi bi-pencil-square"></i>'.html_safe, edit_post_path(@post) %></div>
      <div class="delete-icon"><%= link_to '<i class="bi bi-x-square-fill"></i>'.html_safe, @post, method: :delete %></div>
    </div>
  </div>
</div>